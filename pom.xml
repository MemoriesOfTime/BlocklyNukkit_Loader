        </dependency>
        <dependency>
            <groupId>org.jetbrains</groupId>
            <artifactId>annotations</artifactId>
            <version>13.0</version>
        </dependency>
        <dependency>
            <groupId>com.formdev</groupId>
            <artifactId>flatlaf</artifactId>
            <version>1</version>
            <scope>system</scope>
            <systemPath>${pom.basedir}/nukkit/plugins/flatlaf-0.41.jar</systemPath>
        </dependency>
        <dependency>
            <groupId>com.blocklynukkit.gameAPI</groupId>
            <artifactId>gameAPI</artifactId>
            <version>1.0-SNAPSHOT</version>
            <scope>system</scope>
            <systemPath>${pom.basedir}/nukkit/plugins/GameAPI-1.0-SNAPSHOT.jar</systemPath>
        </dependency>
        <dependency>
            <groupId>org.python</groupId>
            <artifactId>Jython</artifactId>
            <version>1.0-SNAPSHOT</version>
            <scope>system</scope>
            <systemPath>${pom.basedir}/nukkit/plugins/pythonForBN.jar</systemPath>
        </dependency>
        <dependency>
            <groupId>com.caucho</groupId>
            <artifactId>quercus</artifactId>
            <version>1.0-SNAPSHOT</version>
            <scope>system</scope>
            <systemPath>${pom.basedir}/nukkit/plugins/quercus.jar</systemPath>
        </dependency>
    </dependencies>

</project>